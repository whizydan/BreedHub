<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro.OnBoardingActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/onboarding_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:contentPadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                android:id="@+id/spring_dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dampingRatio="0.5"
                app:dotsColor="@color/white"
                android:layout_gravity="center"
                app:dotsStrokeColor="@color/accent"
                app:dotsCornerRadius="2dp"
                app:dotsSize="16dp"
                app:dotsSpacing="6dp"
                app:dotsStrokeWidth="2dp"
                app:stiffness="300"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:text="Breeding"
                android:textAlignment="center"
                android:textSize="30sp"
                android:id="@+id/title"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poetsen"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/description"
                android:text="Upload pet and chat with other breeders in your area"
                android:textAlignment="center"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:backgroundTint="@color/positive"
                app:cornerRadius="8dp"
                android:id="@+id/next"
                android:text="Next"
                app:elevation="5dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:text="Skip"
                android:id="@+id/skip"
                android:textColor="@color/positive"
                android:backgroundTint="@android:color/transparent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView5"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView5"
        app:layout_constraintStart_toStartOf="@+id/materialCardView5" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/progress"
        android:layout_marginBottom="-35dp"
        android:progress="33"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView5"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView5"
        app:layout_constraintStart_toStartOf="@+id/materialCardView5" />

</androidx.constraintlayout.widget.ConstraintLayout>